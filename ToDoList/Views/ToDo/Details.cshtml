@using ToDoList.Models.DTOs;
@model ToDoDTO;


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ToDO</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        <dt class="col-sm-2">
            Nationality
        </dt>
        <dd class="col-sm-10">
            @Model.Describtion
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Difficulty

        </dd>
        <dt class="col-sm-2">
            Birthday
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate

        </dd>
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate

        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-outline-dark" asp-action="UserToDoes">Back to List</a>
</div>
