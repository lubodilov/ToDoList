@using Microsoft.AspNetCore.Identity;
@using ToDoList.Data;
@using ToDoList.Models.DTOs;
@model List<ToDoDTO>
@inject SignInManager<User> signinManager;

@{
    ViewData["Title"] = "UserToDoesSearch";
}
<h1>These are the tasks you have searched for </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Name</strong>
            </th>
            <th>
                <strong>Describtion</strong>
            </th>
            <th>
                <strong>Difficulty</strong>
            </th>
            <th>
                <strong>StartDate</strong>
            </th>
            <th>
                <strong>EndDate</strong>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Describtion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Difficulty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
            </tr>
        }
    </tbody>
</table>
@if (this.signinManager.IsSignedIn(User))
{
    <a class="btn btn-outline-dark" asp-area="" asp-controller="ToDo" asp-action="UserToDoes">Back to List</a>
}
else
{
    <p>Login to create a task</p>
    <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Login</a>
}